<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="certs">

	<insert id="insert" parameterType="Cert">
		INSERT INTO certs(no,user_No,code,type,regdate)
		VALUES(certs_seq.nextval,#{userNo},#{code},#{type},systimestamp)
	</insert>
	
	<delete id="delete" parameterType="int">
		DELETE certs
		WHERE user_no = #{userNo}
	</delete>
	
	<select id="selectCheckNo" resultType="int" parameterType="int">
		SELECT count(*)
		FROM CERTS
		WHERE user_no=#{userNo}
	</select>

	

</mapper>